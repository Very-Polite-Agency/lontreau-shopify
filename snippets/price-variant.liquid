{% style %}

  .compare-at-price-product{
    position: relative;
    font-size: 20px;
  }

  .compare-at-price-product:before{
    position: absolute;
  content: "";
  left: 0;
  top: 50%;
  right: 0;
  border-top: 1px solid;
  border-color: inherit;
  
  -webkit-transform:rotate(-5deg);
  -moz-transform:rotate(-5deg);
  -ms-transform:rotate(-5deg);
  -o-transform:rotate(-5deg);
  transform:rotate(-5deg);
  }

  span.regular-price-product {
    font-weight: 600;
    font-size: 24px;
}
  
{% endstyle %}
<div class="my-3">
{% assign product_price = product.selected_or_first_available_variant %}
<span class="compare-at-price-product">{{ product_price.compare_at_price | money }}</span>
<span class="regular-price-product">{{ product_price.price | money }}</span>

{% if product_price.price < product_price.compare_at_price %}
<span>Sale</span>
{% endif %}
</div>