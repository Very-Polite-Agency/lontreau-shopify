{% assign section_name = 'header' %}
{% assign section_id = section_name | append: '--' | append: section.id %}

{% assign menu_main = section.settings.menu_main | default: false %}

<div class="{{ section_name }}__main">
  {% render 'layout--container' %}
    <div class="{{ section_name }}__layout">

      <div class="{{ section_name }}__brand">
        <a href="/" target="_self" title="Home">
          {% render 'svg', type: 'brand.logo.circle' %}
        </a>
      </div>

      {% if menu_main %}
        {% render 'navigation', classes: 'header__main-menu', menu_handle: menu_main %}
      {% endif %}

    </div>
  {% render 'layout--container', state: 'closed' %}
</div>

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

{% schema %}
  {
    "name": "Header",
    "tag": "header",
    "class": "header",
    "settings": [
      {
        "content": "Navigation",
        "type": "header"
      },
      {
        "label": "Main Menu",
        "type": "link_list",
        "id": "menu_main"
      }
    ],
	  "blocks": []
  }
{% endschema %}

