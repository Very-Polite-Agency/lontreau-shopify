{% assign section_name = 'mobile-menu' %}
{% assign section_id = section_name | append: '--' | append: section.id %}

{% assign menu_main = section.settings.menu_main | default: false %}
{% assign menu_shopping = section.settings.menu_shopping | default: false %}

<div class="{{ section_name }}__shopping">
  {% if menu_shopping %}
    <nav class="{{ section_name }}__main-navigation navigation navigation--main">
      {% for link in linklists[menu_shopping].links %}
        {% render 'navigation-item-mobile', index: forloop.index, link: link %}
      {% endfor %}
    </nav>
  {% endif %}
</div>

<div class="{{ section_name }}__main">
  {% if menu_main %}
    <nav class="{{ section_name }}__main-navigation navigation navigation--main">
      {% for link in linklists[menu_main].links %}
        {% render 'navigation-item-mobile', index: forloop.index, link: link %}
      {% endfor %}
      <div class="navigation__item cart">
        <a class="navigation__link link" href="/cart" title="Cart">
          <span class="link__title">Cart</span>
          <span class="link__icon js--cart-items-total">({{ cart.item_count }})</span>
        </a>
      </div>
    </nav>
  {% endif %}
</div>

<div class="{{ section_name }}__footer">
  <p>Sed ac rutrum turpis, id posuere justo. Nullam finibus egestas neque eget luctus. Etiam vel dapibus erat.</p>
</div>

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

{% schema %}
  {
    "name": "Mobile Menu",
    "tag": "section",
    "class": "section mobile-menu",
    "settings": [
      {
        "content": "Navigation",
        "type": "header"
      },
      {
        "label": "Shopping Menu",
        "type": "link_list",
        "id": "menu_shopping"
      },
      {
        "label": "Main Menu",
        "type": "link_list",
        "id": "menu_main"
      }
    ],
	  "blocks": []
  }
{% endschema %}
