{% assign section_name = 'mobile-menu' %}
{% assign section_id = section_name | append: '--' | append: section.id %}

{% assign menu_main = section.settings.menu_main | default: false %}

<div class="{{ section_name }}__main">

  {% if menu_main %}
    <nav class="{{ section_name }}__main-navigation navigation navigation--main">
      {% for link in linklists[menu_main].links %}
        {% render 'navigation-item', link: link %}
      {% endfor %}
    </nav>
  {% endif %}

  <nav class="{{ section_name }}__cart-navigation navigation navigation--cart">
    <div class="navigation__item">
      {% assign link_active = false %}
      {% if template == 'cart' %}
        {% assign link_active = true %}
      {% endif %}
      <a class="navigation__link link" href="/cart" title="Cart">
        <span class="link__title">{% render 'svg', type: 'icon.cart' %}</span>
        <span class="link__icon">({{ cart.item_count }})</span>
      </a>
    </div>
  </nav>

</div>

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

{% schema %}
  {
    "name": "Mobile Menu",
    "tag": "section",
    "class": "section mobile-menu",
    "settings": [
      {
        "content": "Navigation",
        "type": "header"
      },
      {
        "label": "Main Menu",
        "type": "link_list",
        "id": "menu_main"
      }
    ],
	  "blocks": []
  }
{% endschema %}
