{% assign section_name = 'full-width-feature' %}
{% assign section_id = section_name | append: '--' | append: section.id %}

{% assign title = section.settings.title | default: '' %}
{% assign message = section.settings.message | default: '' %}

<div class="{{ section_name }}" id="{{ section_id }}">
  <div class="{{ section_name }}__media"></div>
  <div class="{{ section_name }}__main">
    {% render 'layout--container' %}

      {% if title != blank %}
        <h3 class="{{ section_name }}__title title--1">{{ title }}</h3>
      {% endif %}

      {% if message != blank %}
        <div class="{{ section_name }}__heading heading--2">{{ message }}</div>
      {% endif %}

    {% render 'layout--container', state: 'closed' %}
  </div>
</div>

{% schema %}
{
  "name": "Full Width Feature",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "content": "Content",
      "type": "header"
    },
    {
      "label": "Title",
      "type": "text",
      "id": "title"
    },
    {
      "label": "Message",
      "type": "richtext",
      "id": "message"
    },
    {
      "label": "Image",
      "type": "image_picker",
      "id": "image"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Full Width Feature"
    }
  ]
}
{% endschema %}
