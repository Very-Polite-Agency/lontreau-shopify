{% assign section_name = 'educational-carousel' %}
{% assign section_id = section_name | append: '--' | append: section.id %}

{% assign alignment = section.settings.alignment | default: 'center' %}
{% assign content_type = section.settings.content_type | default: 'minimal' %}
{% assign heading = section.settings.heading | default: false %}
{% assign highlight = section.settings.highlight | default: false %}
{% assign message = section.settings.message | default: false %}
{% assign style = section.settings.style | default: 'light' %}
{% assign blocks = section.blocks | where: "type", content_type %}

{% render 'tools--debug-this', item: blocks %}

<div class="{{ section_name }}" id="{{ section_id }}" data-alignment="{{ alignment }}" data-style="{{ style }}">
  <div class="{{ section_name }}__main">

    {% if heading %}
      <div class="{{ section_name }}__content">
        <div class="{{ section_name }}__heading heading--2 {% if highlight %} highlight--{{ highlight }}{% endif %}">{{ heading }}</div>
      </div>
    {% endif %}

  </div>
</div>

{% schema %}
{
  "name": "Educational Carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "content": "Content",
      "type": "header"
    },
    {
      "label": "Type",
      "type": "select",
      "options": [
        { "value": "minimal", "label": "Minimal" },
        { "value": "detailed", "label": "Detailed" }
      ],
      "default": "minimal",
      "id": "content_type"
    },
    {
      "label": "Alignment",
      "type": "select",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center",
      "id": "alignment"
    },
    {
      "label": "Heading",
      "type": "richtext",
      "id": "heading"
    },
    {
      "label": "Highlight",
      "type": "select",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "stroke", "label": "Stroke" },
        { "value": "circle", "label": "Circle" }
      ],
      "default": "standard",
      "id": "highlight"
    },
    {
      "label": "Message",
      "info": "For optimal results, keep content within 250 characters.",
      "type": "richtext",
      "id": "message"
    },
    {
      "content": "Settings",
      "type": "header"
    },
    {
      "label": "Style",
      "type": "select",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "light",
      "id": "style"
    }
  ],
  "blocks": [
    {
      "name": "Detailed",
      "type": "detailed",
      "settings": [
        {
          "label": "Title",
          "type": "text",
          "id": "title"
        },
        {
          "label": "Description",
          "type": "richtext",
          "info": "For optimal results, keep content within 175 characters.",
          "id": "description"
        },
        {
          "label": "Image",
          "info": "For optimal results, select an image that is at least 300px wide and no larger than 50kb in file-size.",
          "type": "image_picker",
          "id": "image"
        }
      ]
    },
    {
      "name": "Minimal",
      "type": "minimal",
      "settings": [
        {
          "label": "Title",
          "type": "text",
          "id": "title"
        },
        {
          "label": "Image",
          "info": "For optimal results, select an image that is at least 300px wide and no larger than 50kb in file-size.",
          "type": "image_picker",
          "id": "image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Educational Carousel"
    }
  ]
}
{% endschema %}
