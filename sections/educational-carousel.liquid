{% assign section_name = 'educational-carousel' %}
{% assign section_id = section_name | append: '--' | append: section.id %}

{% assign alignment = section.settings.alignment | default: 'center' %}
{% assign content_type = section.settings.content_type | default: 'minimal' %}
{% assign heading = section.settings.heading | default: false %}
{% assign highlight = section.settings.highlight | default: false %}
{% assign message = section.settings.message | default: false %}
{% assign style = section.settings.style | default: 'light' %}
{% assign blocks = section.blocks | where: "type", content_type | default: false %}
{% assign glider_id = section_id | append: '--glider' %}
{% assign is_glider = false %}
{% if blocks.size > 3 %}
  {% assign is_glider = true %}
{% endif %}

<div class="{{ section_name }}" id="{{ section_id }}" data-alignment="{{ alignment }}" data-content-type="{{ content_type }}" data-style="{{ style }}" {% if is_glider %}data-is-glider{% endif %}>

  {% if heading or message %}
    <div class="{{ section_name }}__intro">
      {% render 'layout--container' %}
        {% if heading %}
          <div class="{{ section_name }}__heading heading--2 {% if highlight %} highlight--{{ highlight }}{% endif %}">{{ heading }}</div>
        {% endif %}
        {% if message %}
          <div class="{{ section_name }}__message body-copy--large">{{ message }}</div>
        {% endif %}
      {% render 'layout--container', state: 'closed' %}
    </div>
  {% endif %}

  {% if blocks %}
    <div class="{{ section_name }}__main {% if is_glider %}with-glider{% endif %}">

      {% if is_glider %}<div class="glide js--glider" id="{{ glider_id }}" data-glide-style="{{ section_name }}-{{ content_type }}">{% endif %}
        {% if is_glider %}<div class="glide__track" data-glide-el="track">{% endif %}
          {% if is_glider %}<ul class="glide__slides">{% endif %}

            {% for block in blocks %}

              {% assign description = block.settings.description | default: false %}
              {% assign image = block.settings.image | default: false %}
              {% assign title = block.settings.title | default: false %}

              {% if title or image %}
                {% if is_glider %}<li class="glide__slide">{% endif %}
                  <div class="{{ section_name }}__item">
                    {% if image %}
                      <div class="{{ section_name }}__image">{% render 'content--lazyload-image', alt_text: title, image: image %}</div>
                    {% endif %}
                    {% if title %}
                      <strong class="{{ section_name }}__title label--primary">{{ title }}</strong>
                    {% endif %}
                    {% if description %}
                      <div class="{{ section_name }}__description body-copy--alt">{{ description }}</div>
                    {% endif %}
                  </div>
                {% if is_glider %}</li>{% endif %}
              {% endif %}

            {% endfor %}

          {% if is_glider %}</ul>{% endif %}
        {% if is_glider %}</div>{% endif %}
      {% if is_glider %}</div>{% endif %}

    </div>
  {% endif %}


  {% if is_glider %}
    <div class="glide__controls--technical">
      <button class="glide__button button prev" data-target="#{{ glider_id }}">{% render 'svg--icon', icon_type: 'arrow' %}</button>
      <button class="glide__button button next" data-target="#{{ glider_id }}">{% render 'svg--icon', icon_type: 'arrow' %}</button>
    </div>
  {% endif %}

</div>

{% schema %}
{
  "name": "Educational Carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "content": "Content",
      "type": "header"
    },
    {
      "label": "Type",
      "type": "select",
      "options": [
        { "value": "minimal", "label": "Minimal" },
        { "value": "detailed", "label": "Detailed" }
      ],
      "default": "minimal",
      "id": "content_type"
    },
    {
      "label": "Alignment",
      "type": "select",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center",
      "id": "alignment"
    },
    {
      "label": "Heading",
      "type": "richtext",
      "id": "heading"
    },
    {
      "label": "Highlight",
      "type": "select",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "stroke", "label": "Stroke" },
        { "value": "circle", "label": "Circle" }
      ],
      "default": "standard",
      "id": "highlight"
    },
    {
      "label": "Message",
      "info": "For optimal results, keep content within 250 characters.",
      "type": "richtext",
      "id": "message"
    },
    {
      "content": "Settings",
      "type": "header"
    },
    {
      "label": "Style",
      "type": "select",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "light",
      "id": "style"
    }
  ],
  "blocks": [
    {
      "name": "Detailed",
      "type": "detailed",
      "settings": [
        {
          "label": "Title",
          "type": "text",
          "id": "title"
        },
        {
          "label": "Description",
          "type": "richtext",
          "info": "For optimal results, keep content within 175 characters.",
          "id": "description"
        },
        {
          "label": "Image",
          "info": "For optimal results, select an image that is at least 300px wide and no larger than 50kb in file-size.",
          "type": "image_picker",
          "id": "image"
        }
      ]
    },
    {
      "name": "Minimal",
      "type": "minimal",
      "settings": [
        {
          "label": "Title",
          "type": "text",
          "id": "title"
        },
        {
          "label": "Image",
          "info": "For optimal results, select an image that is at least 300px wide and no larger than 50kb in file-size.",
          "type": "image_picker",
          "id": "image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Educational Carousel"
    }
  ]
}
{% endschema %}
