<div class="customer login page-width">
  
    
     {%- if recover_success == true -%}
      <small class="form__message" tabindex="-1" autofocus>
         {% render 'icon', icon: 'error' %}
        {{ 'customer.recover_password.success' | t }}
      </small>
    {%- endif -%}
    
    
      <h1 id="loginn" class="h2" tabindex="-1">{{ 'customer.login_page.title' | t }}</h1>  
    
      

       
          

  
       <form-state>
      {%- form 'recover_customer_password' -%}
        {% assign recover_success = form.posted_successfully? %}
         
    {%- if form.errors -%}
          <small id="RecoverEmail-email-error" class="form__message errors">
           
            {{ form.errors.messages['form'] }}
          </small>
        {%- endif -%}
         
         {% if recover_success %} <p class="success--message"> A password reset link has been sent to your email. </p> {% endif %}
 
         
    <div class="recover" id="recover">       
         
    <h2 class="forget-pass">Forget your password</h2>
    
    <p>{{ 'customer.recover_password.subtext' | t }}</p>

 
        <div class="field">
          <input
            required="required"
            class="input--primary required{% if form.errors %} invalid{% endif %}"
            type="email"
            value=""
            name="email"
            id="RecoverEmail"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="RecoverEmail-email-error"
              autofocus
            {% endif %}
            placeholder="{{ 'customer.login_page.email' | t }}"
          >
          <label class="visually-hidden" for="RecoverEmail">{{ 'customer.login_page.email' | t }}</label>
        </div>
        

        <button class="button login-btn" type="submit">
          {{ 'customer.login_page.submit' | t }}
        </button>

    <a class="link link--underline"  href="#login" onclick="switchVisible();">
          {{ 'customer.login_page.cancel' | t }}
        </a>
    
        </div>
      
      {%- endform -%}
    </form-state>

        
 

  
  <div class="log" id="login">

     
   
    <form-state>
      {%- form 'customer_login' -%}
      
      <style>
      
          #customer_login li{
            color: #f05d5d;
            background-color: #fce2e2;
            width: max-content;
            list-style: none;
            margin: auto;
            padding: 2px 10px;
         }
      
      </style>
      
      {{ form.errors | default_errors }}
   
      
        <div class="field">        
          <input
            required="required"
            class="input--primary required{% if form.errors contains 'form' %} invalid{% endif %}"
            type="email"
            name="customer[email]"
            id="CustomerEmail"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            {%- if form.errors contains 'email' -%}
              class="input--error"
              aria-invalid="true"
              aria-describedby="loginform-email-error"
            {%- endif -%}
            placeholder="{{ 'customer.login_page.email' | t }}"
          >
          <label class="visually-hidden" for="CustomerEmail">{{ 'customer.login_page.email' | t }}</span>
          {%- if form.errors contains 'form' -%}
            <small>
              <span class="form__message errors">
                {% render 'icon', icon: 'error' %}
                {{ form.errors.messages['form'] }}
              </span>
            </small>
          {%- endif -%}
          
          {%- if form.errors contains 'email' -%}
            <span id="loginform-email-error" class="input-error-message">
              <span class="visually-hidden">{{ 'general.accessibility.error' | t }} </span>
              {% include 'icon-error' %}
              <span>{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}.</span>
            </span>
          {%- endif -%}
          
        </div>

        {%- if form.password_needed -%}
          <div class="field">          
            <input
              required="required"
              class="input--primary required{% if form.errors contains 'form' %} invalid{% endif %}"
              type="password"
              value=""
              name="customer[password]"
              id="CustomerPassword"
              autocomplete="current-password"
               {%- if form.errors contains 'password' -%}
              class="input--error"
              aria-invalid="true"
              aria-describedby="{{ formId }}-password-error"
            {%- endif -%}
              placeholder="{{ 'customer.login_page.password' | t }}"
            >
            <label class="visually-hidden" for="CustomerPassword">{{ 'customer.login_page.password' | t }}</label>
            
            {%- if form.errors contains 'password' -%}
            <span id="{{ formId}}-password-error" class="input-error-message">
              {% include 'icon-error' %}
              <span>{{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}.</span>
            </span>
          {%- endif -%}
            
          </div>
          
        {%- endif -%}

      <div class="login-btn-section">
        <button class="button btn login-btn" type="submit">{{ 'customer.login_page.sign_in' | t }}</button>
        <a class="link link--underline reg btn" href="{{ routes.account_register_url }}"> {{ 'customer.login_page.create_account' | t }}</a>
      </div>
      

        <a class="link forg"  href="#recover" onclick="switchVisible();">{{ 'customer.login_page.forgot_password' | t }}</a> 
      {%- endform -%}
    </form-state>
  </div>
  
  {%- if shop.checkout.guest_login -%}
    <div>
      <hr>
      <h2>{{ 'customer.login_page.guest_title' | t }}</h2>

      {%- form 'guest_login' -%}
        <button class="button" type="submit">
          {{ 'customer.login_page.guest_continue' | t }}
        </button>
      {%- endform -%}
    </div>
  {%- endif -%}
</div>

